<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TwoPlayerActivity">

    <!-- Player 2 Area !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/_20sdp">
        <TextView
            android:id="@+id/player2ScissorButton"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/buttons"
            android:layout_marginStart="@dimen/_25sdp"
            android:focusable="true"
            android:paddingTop="@dimen/_20sdp"
            android:rotation="180"
            android:layout_weight="1"
            app:drawableTopCompat="@drawable/scissors_32" />
        <TextView
            android:id="@+id/player2PaperButton"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/buttons"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:paddingTop="@dimen/_20sdp"
            android:focusable="true"
            android:rotation="180"
            android:layout_weight="1"
            app:drawableTopCompat="@drawable/paper_32" />
        <TextView
            android:id="@+id/player2StoneButton"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/buttons"
            android:layout_marginEnd="@dimen/_25sdp"
            android:paddingTop="@dimen/_20sdp"
            android:focusable="true"
            android:rotation="180"
            android:layout_weight="1"
            app:drawableTopCompat="@drawable/stone_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/_15sdp">
        <TextView
            android:id="@+id/player2LoseScoreText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textAlignment="textStart"
            android:fontFamily="@font/allerta_stencil"
            android:textSize="@dimen/_10sdp"
            android:rotation="180"
            android:text="DRAW_SCORE" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.3"
            android:rotation="180"
            app:srcCompat="@drawable/lose_circle" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />
        <TextView
            android:id="@+id/player2DrawScoreText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textAlignment="textStart"
            android:fontFamily="@font/allerta_stencil"
            android:textSize="@dimen/_10sdp"
            android:rotation="180"
            android:text="DRAW_SCORE" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.3"
            android:rotation="180"
            app:srcCompat="@drawable/draw_circle" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />
        <TextView
            android:id="@+id/player2WinScoreText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textAlignment="textStart"
            android:fontFamily="@font/allerta_stencil"
            android:textSize="@dimen/_10sdp"
            android:rotation="180"
            android:text="WIN_SCORE" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.3"
            android:rotation="180"
            app:srcCompat="@drawable/win_circle" />
    </LinearLayout>

    <TextView
        android:id="@+id/player2NameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textAlignment="center"
        android:fontFamily="@font/allerta_stencil"
        android:textSize="@dimen/_12sdp"
        android:layout_weight="1"
        android:rotation="180"
        android:text="@string/player_2_name" />

    <ImageView
        android:id="@+id/player2GameStatus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_weight="1"
        android:rotation="180"
        app:srcCompat="@color/transparent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/player2GifView"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:rotation="180"
        android:layout_weight="1"
        android:visibility="gone"
        android:src="@drawable/waiting" />
    <ImageView
        android:id="@+id/player2SelectOut"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:rotation="180"
        android:layout_weight="1"
        android:src="@color/transparent" />

    <!-- End Player 2 Area !-->
    <!-- Center Menu !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">
        <TextView
            android:id="@+id/menuButton"
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/buttons"
            android:layout_marginTop="@dimen/_5sdp"
            android:focusable="true"
            android:paddingTop="@dimen/_18sdp"
            android:rotation="90"
            app:drawableTopCompat="@drawable/ic_baseline_menu_24" />
    </LinearLayout>
    <!-- End Center Menu !-->
    <!-- Player 1 Area !-->

    <ImageView
        android:id="@+id/player1SelectOut"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:layout_weight="1"
        android:src="@color/transparent"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/player1GifView"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:layout_weight="1"
        android:visibility="gone"
        android:src="@drawable/waiting"/>
    <ImageView
        android:id="@+id/player1GameStatus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight="1"
        app:srcCompat="@color/transparent" />

    <TextView
        android:id="@+id/player1NameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:fontFamily="@font/allerta_stencil"
        android:textSize="@dimen/_12sdp"
        android:text="PLAYER_NAME" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_15sdp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/win_circle" />
        <TextView
            android:id="@+id/player1WinScoreText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_2sdp"
            android:paddingStart="@dimen/_2sdp"
            android:fontFamily="@font/allerta_stencil"
            android:textSize="@dimen/_10sdp"
            android:text="WIN_SCORE" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/draw_circle" />
        <TextView
            android:id="@+id/player1DrawScoreText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_2sdp"
            android:paddingStart="@dimen/_2sdp"
            android:fontFamily="@font/allerta_stencil"
            android:textSize="@dimen/_10sdp"
            android:text="DRAW_SCORE" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/lose_circle" />
        <TextView
            android:id="@+id/player1LoseScoreText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_2sdp"
            android:paddingStart="@dimen/_2sdp"
            android:fontFamily="@font/allerta_stencil"
            android:textSize="@dimen/_10sdp"
            android:text="DRAW_SCORE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_20sdp">
        <TextView
            android:id="@+id/player1StoneButton"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/buttons"
            android:layout_marginStart="@dimen/_25sdp"
            android:paddingTop="@dimen/_20sdp"
            android:focusable="true"
            android:layout_weight="1"
            app:drawableTopCompat="@drawable/stone_32" />
        <TextView
            android:id="@+id/player1PaperButton"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/buttons"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:paddingTop="@dimen/_20sdp"
            android:focusable="true"
            android:layout_weight="1"
            app:drawableTopCompat="@drawable/paper_32" />
        <TextView
            android:id="@+id/player1ScissorButton"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:paddingTop="@dimen/_20sdp"
            android:background="@drawable/buttons"
            android:focusable="true"
            android:layout_weight="1"
            app:drawableTopCompat="@drawable/scissors_32" />
    </LinearLayout>

    <!-- End Player 1 Area !-->





</LinearLayout>