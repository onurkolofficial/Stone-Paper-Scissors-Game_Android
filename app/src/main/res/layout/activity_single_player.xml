<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SinglePlayerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/menuButton"
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/buttons"
            android:focusable="true"
            android:paddingTop="@dimen/_18sdp"
            app:drawableTopCompat="@drawable/ic_baseline_menu_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.7"
                    android:layout_gravity="center"
                    android:paddingEnd="@dimen/_5sdp"
                    app:drawableTint="@color/moneyColor"
                    app:drawableEndCompat="@drawable/ic_baseline_monetization_on_24" />
                <TextView
                    android:id="@+id/gamePlayerMoney"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:fontFamily="@font/allerta_stencil"
                    android:textSize="@dimen/_10sdp"
                    android:text="GAME_MONEY" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="0.7"
                    android:layout_gravity="center"
                    android:paddingEnd="@dimen/_5sdp"
                    app:drawableEndCompat="@drawable/ic_baseline_local_play_24"
                    app:drawableTint="@color/scoreColor" />

                <TextView
                    android:id="@+id/gamePlayerScore"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:fontFamily="@font/allerta_stencil"
                    android:textSize="@dimen/_10sdp"
                    android:text="GAME_SCORE" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/shopButton"
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/buttons"
            android:focusable="true"
            android:fontFamily="@font/allerta_stencil"
            android:paddingTop="@dimen/_18sdp"
            app:drawableTopCompat="@drawable/ic_baseline_shopping_cart_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingTop="@dimen/_10sdp">
        <ImageView
            android:id="@+id/gameStatusXScore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            app:srcCompat="@color/transparent" />
        <ImageView
            android:id="@+id/gameStatusImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:srcCompat="@color/transparent" />
    </LinearLayout>

    <TextView
        android:id="@+id/computerNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:textAlignment="center"
        android:fontFamily="@font/allerta_stencil"
        android:textSize="@dimen/_12sdp"
        android:layout_weight="1"
        android:text="@string/computer_name" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gameWaitingGifView"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:focusable="true"
        android:padding="@dimen/_10sdp"
        android:rotation="180"
        android:layout_weight="1"
        android:visibility="gone"
        android:src="@drawable/waiting"/>
    <ImageView
        android:id="@+id/comSelectOut"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:focusable="true"
        android:padding="@dimen/_10sdp"
        android:rotation="180"
        android:layout_weight="1"
        android:visibility="visible"
        android:src="@color/transparent" />

    <ImageView
        android:id="@+id/playerSelectOut"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:focusable="true"
        android:padding="@dimen/_10sdp"
        android:layout_weight="1"
        android:visibility="visible"
        android:src="@color/transparent" />

    <TextView
        android:id="@+id/playerNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:textAlignment="center"
        android:fontFamily="@font/allerta_stencil"
        android:textSize="@dimen/_12sdp"
        android:layout_weight="1"
        android:text="PLAYER_NAME" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_15sdp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/win_circle" />
        <TextView
            android:id="@+id/winScoreText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_2sdp"
            android:paddingStart="@dimen/_2sdp"
            android:fontFamily="@font/allerta_stencil"
            android:textSize="@dimen/_10sdp"
            android:text="WIN_SCORE" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/draw_circle" />
        <TextView
            android:id="@+id/drawScoreText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_2sdp"
            android:paddingStart="@dimen/_2sdp"
            android:fontFamily="@font/allerta_stencil"
            android:textSize="@dimen/_10sdp"
            android:text="DRAW_SCORE" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/lose_circle" />
        <TextView
            android:id="@+id/loseScoreText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_2sdp"
            android:paddingStart="@dimen/_2sdp"
            android:fontFamily="@font/allerta_stencil"
            android:textSize="@dimen/_10sdp"
            android:text="DRAW_SCORE" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stoneButton"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_65sdp"
                android:background="@drawable/buttons"
                android:layout_marginStart="@dimen/_25sdp"
                android:paddingTop="@dimen/_20sdp"
                android:focusable="true"
                app:drawableTopCompat="@drawable/stone_32" />
            <TextView
                android:id="@+id/paperButton"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_65sdp"
                android:background="@drawable/buttons"
                android:layout_marginStart="@dimen/_25sdp"
                android:paddingTop="@dimen/_20sdp"
                android:focusable="true"
                app:drawableTopCompat="@drawable/paper_32" />
            <TextView
                android:id="@+id/scissorButton"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_65sdp"
                android:background="@drawable/buttons"
                android:layout_marginStart="@dimen/_25sdp"
                android:paddingTop="@dimen/_20sdp"
                android:focusable="true"
                app:drawableTopCompat="@drawable/scissors_32"/>
            <TextView
                android:id="@+id/ironButton"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_65sdp"
                android:background="@drawable/buttons"
                android:layout_marginStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_20sdp"
                android:visibility="gone"
                android:focusable="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/allerta_stencil"
                android:textSize="@dimen/_12sdp"
                android:text="ITEM_COUNT"
                app:drawableTopCompat="@drawable/iron_32" />


        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>