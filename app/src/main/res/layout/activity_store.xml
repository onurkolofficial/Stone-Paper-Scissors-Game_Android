<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.StoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="0.7"
                android:layout_gravity="center"
                android:paddingEnd="@dimen/_5sdp"
                app:drawableTint="@color/moneyColor"
                app:drawableEndCompat="@drawable/ic_baseline_monetization_on_24" />
            <TextView
                android:id="@+id/storePlayerMoney"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:paddingTop="@dimen/_5sdp"
                android:fontFamily="@font/allerta_stencil"
                android:textSize="@dimen/_12sdp"
                android:text="GAME_MONEY" />
        </LinearLayout>

        <ListView
            android:id="@+id/storeItemList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/store_border"
            android:divider="@color/transparent"
            android:padding="@dimen/_10sdp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/backButton"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_75sdp"
            android:background="@drawable/buttons"
            android:paddingTop="@dimen/_30sdp"
            android:text="@string/back_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/allerta_stencil"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:focusable="true" />
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>